- repo_path = repository.owner ? user_repository_path(repository.owner, repository.name) : "/#{repository.full_name}"
= link_to repo_path,
  class: 'list-group-item paginated_item' do
  - if repository.owner
    = image_tag repository.owner.avatar_url, class: 'avatar_image_big'
  %span.name
    #{repository.rank}.
    %span.hidden-xs.hidden-sm
      = truncate repository.full_name, length: 30
    %span.hidden-md.hidden-lg
      = truncate repository.name, length: 24
  %span.stargazers_count.pull-right
    = fa_icon 'star'
    = repository.stargazers_count
  %div
    .repo-description{title: repository.description}
      = repository.description.present? ? truncate(repository.description, length: 70) : 'No description available'
    .repo-language
      %span= repository.language.present? ? truncate(repository.language, length: 30) : 'No language available'
